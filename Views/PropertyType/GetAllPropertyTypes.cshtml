
@model IEnumerable<PeaceHomeEstateManagement.Dto.PropertyTypeDto>

@{
    ViewBag.Title = "Property Types";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* General Styles */
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background: url('https://images.unsplash.com/photo-1564013799919-ab600027ffc6?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80') no-repeat center center fixed;
            background-size: cover;
            color: #333;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            max-width: 1400px; /* Wider container */
            margin: 20px;
            padding: 20px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(10px);
        }

        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background: rgba(255, 255, 255, 0.9);
        }

        .card-header {
            background: linear-gradient(135deg, #2980b9, #6dd5fa);
            color: #fff;
            padding: 25px; /* Increased padding */
            text-align: center;
        }

        .card-header h4 {
            margin: 0;
            font-size: 2rem; /* Larger font size */
            font-weight: 600;
        }

        .card-body {
            padding: 25px; /* Increased padding */
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 0;
        }

        .table thead {
            background: #34495e;
            color: #fff;
        }

        .table th, .table td {
            padding: 16px; /* Increased padding */
            text-align: left;
            font-size: 1.1rem; /* Larger font size */
        }

        .table th {
            font-size: 1.2rem; /* Larger font size for headers */
        }

        .table tbody tr {
            transition: background 0.3s ease;
        }

        .table tbody tr:hover {
            background: rgba(52, 152, 219, 0.1);
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background: rgba(249, 249, 249, 0.8);
        }

        .alert {
            padding: 20px; /* Increased padding */
            border-radius: 10px;
            text-align: center;
            font-size: 1.2rem; /* Larger font size */
        }

        .alert-info {
            background: rgba(209, 236, 241, 0.9);
            color: #0c5460;
        }

        .btn-primary {
            background: #3498db;
            border: none;
            padding: 12px 24px; /* Larger button */
            border-radius: 5px;
            color: #fff;
            font-size: 1.1rem; /* Larger font size */
            transition: background 0.3s ease;
        }

        .btn-primary:hover {
            background: #2980b9;
        }

        <text>
        /* Responsive Design */
        @@media (max-width: 768px) {
            .container {
                max-width: 100%; /* Full width on smaller screens */
                margin: 10px;
                padding: 10px;
            }

            .card-header h4 {
                font-size: 1.8rem; /* Slightly smaller for mobile */
            }

            .table th, .table td {
                padding: 12px; /* Slightly smaller for mobile */
                font-size: 1rem; /* Slightly smaller for mobile */
            }

            .alert {
                padding: 15px; /* Slightly smaller for mobile */
                font-size: 1rem; /* Slightly smaller for mobile */
            }
        }
        </text>
    </style>
</head>
<body>
    <div class="container">
        <div class="card shadow-sm">
            <div class="card-header">
                <h4>Property Types</h4>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Property Type Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model.ElementAt(i).Name</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        No property types available.
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>