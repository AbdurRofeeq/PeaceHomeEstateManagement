
@model PeaceHomeEstateManagement.Dto.PropertyTypeDto

@{
    ViewData["Title"] = "Property Type Details";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card {
            border-radius: 10px;
            border: none;
            overflow: hidden;
        }
        .card-header {
            border-bottom: none;
        }
        .property-badge {
            background-color: #e9f5ff;
            color: #0d6efd;
            border-radius: 20px;
            padding: 5px 12px;
            font-size: 0.85rem;
        }
        .list-group-item {
            border-left: none;
            border-right: none;
            padding: 1.25rem 1.5rem;
            transition: all 0.3s ease;
        }
        .list-group-item:hover {
            background-color: #f8f9fa;
            transform: translateX(5px);
        }
        .empty-state {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 2rem;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg">
                    <!-- Card Header -->
                    <div class="card-header bg-primary text-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="mb-0">
                                <i class="fas fa-building me-2"></i>Property Type Details
                            </h4>
                            <a href="#" onclick="window.close()" class="text-white">
                                <i class="fas fa-times"></i>
                            </a>
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body p-4">
                        <!-- Property Type Info -->
                        <div class="d-flex align-items-center mb-4">
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                <i class="fas fa-tag text-primary fs-4"></i>
                            </div>
                            <div>
                                <h3 class="mb-0">@Model.Name</h3>
                                <small class="text-muted">Property Type</small>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <!-- Associated Properties -->
                        <div class="mb-4">
                            <h5 class="d-flex align-items-center mb-3">
                                <i class="fas fa-home me-2 text-primary"></i>
                                <span>Associated Properties</span>
                                <span class="property-badge ms-2">@(Model.Properties?.Count ?? 0) properties</span>
                            </h5>

                            @if (Model.Properties != null && Model.Properties.Any())
                            {
                                <div class="list-group">
                                    @foreach (var property in Model.Properties)
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <strong>@property.Name</strong>
                                                    <div class="text-muted small mt-1">
                                                    </div>
                                                </div>
                                                <span class="badge bg-success">Active</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="empty-state text-center py-4">
                                    <i class="fas fa-home fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No Properties Found</h5>
                                    <p class="text-muted">This property type doesn't have any associated properties yet.</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Card Footer -->
                    <div class="card-footer bg-light py-3">
                        <div class="d-flex justify-content-between">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i> Last updated: @DateTime.Now.ToString("MMM dd, yyyy")
                            </small>
                            <div>
                                <a href="#" class="btn btn-sm btn-outline-primary me-2">
                                    <i class="fas fa-edit me-1"></i> Edit Type
                                </a>
                                <a href="#" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i> Back
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Add any necessary JavaScript here
    </script>
</body>
</html>