@model PeaceHomeEstateManagement.Dto.UpdateAmenitiesDto

@{
    ViewBag.Title = "Edit Amenity";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4>Edit Amenity</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Amenity Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter amenity name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="GetAllAmenities" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
